@model GtdApp.Entities.Todo

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Todo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContextId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ContextId, (IList<SelectListItem>)ViewBag.Contexts, "Wybierz")
            @Html.ValidationMessageFor(model => model.ContextId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsDone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsDone)
            @Html.ValidationMessageFor(model => model.IsDone)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

